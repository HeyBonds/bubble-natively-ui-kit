{
  "name": "bubble-natively-ui-kit",
  "version": "1.0.0",
  "description": "Headless UI Component Library for Bubble.io apps wrapped with Natively",
  "main": "bundle.js",
  "scripts": {
    "build:css": "tailwindcss -i ./src/input.css -o ./bundle.css --minify",
    "build:js": "node build.js --minify",
    "build:js:dev": "node build.js",
    "build": "npm run build:css && npm run build:js",
    "watch": "node build.js --watch",
    "dev": "npm run build && ./preview-server.sh",
    "preview": "./preview-server.sh"
  },
  "keywords": [
    "bubble",
    "natively",
    "ui-kit",
    "headless"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.24",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.1",
    "terser": "^5.46.0"
  }
}
